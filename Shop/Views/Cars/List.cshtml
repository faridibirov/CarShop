<h1>Все Автомобили</h1>
<h3>@Model.currCategory</h3>
<div class="row mt-5 mb-2">
	@{
		foreach(var car in Model.AllCars) {
			<div class="col-lg-4">
				<img class="img-thumbnail" src="@car.Img" alt="@car.Name" />
				<h2>@car.Name</h2>
				<p>@car.shortDesc</p>
				<p>Цена: @car.Price.ToString("c")</p>
				<p><a class="btn btn-warning" href="#">Подробнее</a></p>
			</div>
		}
		}
</div>

