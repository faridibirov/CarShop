@model ShopCartViewModel
<div class="container">
	@foreach (var el in Model.shopCart.listShopItems)
	{
		<div class="alert alert-warning mt-3">
			<b>Автомобиль:</b> @el.Car.Name <br />
			<b>Описание:</b> @el.Car.longDesc <br />
			<b>Цена:</b> @el.Car.Price.ToString("c", new System.Globalization.CultureInfo("en-US"))
		</div>
	}

	@if (!Model.shopCart.listShopItems.Any())
	{
		<h3>Корзина пуста</h3>
	}

	<hr />
    <a class="btn btn-danger mb-5 @(Model.shopCart.listShopItems.Any() ? "" : "disabled")"
       asp-controller="Order"
       asp-action="Checkout">
        Оформить заказ
    </a>
</div>		