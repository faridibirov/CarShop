@using Microsoft.AspNetCore.Identity

@inject SignInManager<DefaultUser> SignInManager
@inject UserManager<DefaultUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item" >
            <a id="manage" class="nav-link active" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Привет, @UserManager.GetUserName(User)!</a>
    </li>
        <li class="nav-item" >
        <form id="logoutForm" class="form-inline active" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link">Выход</button>
        </form>
    </li>
}
else
{
        <li class="nav-item" >
            <a class="btn btn-outline-light" id="register" asp-area="Identity" asp-page="/Account/Register" style="margin-right:10px">Регистрация</a>
    </li>
    <li class="nav-item" >
            <a class="btn btn-outline-light" id="login" asp-area="Identity" asp-page="/Account/Login">Вход</a>
    </li>
}
</ul>
